function usage {

	echo "usage: $0 <o|e|p|t|m> <job number>"
	echo "       show [o]utput"
        echo "            [e]rror"
        echo "            [p]bs-script for a job"
        echo "            [t]mpdir for a job"
        echo "            [m]memory usage for a job"
	exit
}

function check_if_running {

	state=$(qstat -f $1 | awk '/job_state/{print $3}')

	if [ $state != "R" ]
	then
		echo "$job is not yet running"
		exit
	fi
}

function check_if_job {

	qstat $job >/dev/null 2>&1
	isjob=$?

	if [ $isjob -ne 0 ]
	then
		echo "$job doesn't appear to be a job"
		exit
	fi

}

if [ $# -ne 2 ]
then
	usage
fi

job=$2

check_if_job $job

if [ "$1" == "t" ]
then
	check_if_running $job
	leadnode=$(checkjob -v $job | grep "Task Distribution" | awk -F, '{print $1}' | awk '{print $3}')
	ssh $leadnode "ls -l /tmp/${job}.*/"
elif [ "$1" == "m" ]
then
	check_if_running $job
	leadnode=$(checkjob -v $job | grep "Task Distribution" | awk -F, '{print $1}' | awk '{print $3}')
	ssh $leadnode "/usr/local/recluse/scripts/sbin/memory_used_by_job ${job}"
elif [ "$1" == "o" ]
then
	check_if_running $job
	leadnode=$(checkjob -v $job | grep "Task Distribution" | awk -F, '{print $1}' | awk '{print $3}')
	ssh $leadnode "cat /usr/spool/PBS/spool/${job}.*.OU"
elif [ "$1" == "e" ]
then
	check_if_running $job
	leadnode=$(checkjob -v $job | grep "Task Distribution" | awk -F, '{print $1}' | awk '{print $3}')
	ssh $leadnode "cat /usr/spool/PBS/spool/${job}.*.ER"
elif [ "$1" == "p" ]
then
	if [ -e /usr/spool/PBS/server_priv/jobs/$job.*.SC ]
	then
		cat /usr/spool/PBS/server_priv/jobs/$job.*.SC
	else
		echo "Job doesn't exist, or is interactive"
	fi
else
	usage
fi	
