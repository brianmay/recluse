# DO NOT change formatting here without also amending check_cores and assign_cores

nh=""

while getopts "su:" option
do
        case $option in
                s) nh="--no-headers";;
		u) user=$OPTARG
        esac
done

if [ x"$user" == "x" ]
then
	/bin/ps ax $nh -o pid,user:20,cputime,etime,pmem,pcpu,psr,wchan:15,cmd | awk '{if ($2 != "root" && $2 != "rpc" && $2 != "rpcuser" && $2 != "ntp" && $2 != "xfs" && $2 != "dbus" && $2 != "ganglia" && $2 != "haldaemon" && $2 != "smmsp" && $2 != "avahi" && $2 != "postfix" && $2 != "bin" && $2 != "daemon" && $2 != "nobody" && $2 != "sshd" ) { print $0 } }'
else
	/bin/ps ax $nh -o pid,user:20,cputime,etime,pmem,pcpu,psr,wchan:15,cmd | awk -v user=$user '{if ($2 == user) { print $0 }}'
fi
