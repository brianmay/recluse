CONFIG=/usr/local/recluse/config
[ -r "$CONFIG" ] || echo "Can't source $CONFIG"
[ -r "$CONFIG" ] || exit 0
source $CONFIG

user=$1

if [ $# -ne 1 ]
then
	echo "usage: $0 <user>"
	exit 1
fi

for job in $(qstat -u $user | grep -w R | awk -F. '{print $1}')
do 
	for node in $(checkjob $job | grep $cluster | tr ':' '\n')
	do
		echo $node | sed "s/.*\($cluster[0-9][0-9][0-9]\).*/\1/"
	done | grep $cluster
done | sort | uniq
